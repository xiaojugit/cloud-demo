/* miniprogram/pages/my/my.wxss */

.user-container {
  height: 100%;
  background-color: #f5f5f5;
  color: #353535;
  position: relative;
  overflow-x: hidden;
}

.userinfo {
  width: 120%;
  height: 160px;
  background: #3a82f8;
  position: relative;
  left: -10%;
  border-bottom-left-radius: 45%;
  border-bottom-right-radius: 45%;
  overflow: hidden;
  text-align: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 30rpx auto 0rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 28rpx;
  color: #fff;
  background-color:transparent;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.user-wrap {
  position: relative;
  top: -35px;
  padding: 0 20px;
  margin-bottom: -35px;
  box-sizing: border-box;
}

.info-wrapper {
  width: 100%px;
  margin: 0 auto;
  border-radius: 4px;
}

.info-item {
  min-height: 100px;
  padding: 0 15px;
  margin-bottom: 10px;
  background-color: #fff;
  font-size: 14px;
  border-radius: 4px;
  box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.03);
  overflow: hidden;
}

.item-title {
  height: 44px;
  line-height: 44px;
  position: relative;
  font-size: 14px;
}

.all-order {
  border-bottom: 1px solid #eee;
}

.all-order:after {
  content: '>';
  width: 7px;
  height: 12px;
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
}

.row-item {
  padding: 10px 0;
  display: flex;
  justify-content: space-between;
}

.item-text {
  flex-grow: 1;
  text-align: justify;
  margin: 0 10px;
  word-break: break-word;
}

.address-icon {
  width: 16px;
  height: 16px;
  margin-top: 2px;
  flex-shrink: 0;
}

.message-item {
  padding-top: 14px;
  margin-bottom: 14px;
  font-size: 13px;
  letter-spacing: 0.3px;
  border-top: 1px solid #eee;
}

.service-info {
  height: 55px;
  margin-bottom: 10px;
  background-color: #f8f8f8;
  overflow: hidden;
}

.service-img-wrap {
  width: 55px;
  height: 100%;
  margin-right: 10px;
  float: left;
  /* background: url(/image/defaultIcon.png?v=201906051302) 0 -868px no-repeat; */
}

.service-img-wrap image {
  width: 100%;
  height: 100%;
}

.service-name {
  margin-top: 10px;
}

.service-intro {
  font-size: 12px;
  margin-top: 4px;
  color: #888;
}

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order-status-wrap {
  margin: 15px 0 10px;
  display: flex;
  justify-content: space-around;
}

.order-status {
  font-size: 12px;
  color: #666;
  position: relative;
}

.status-icon {
  width: 25px;
  height: 25px;
  display: block;
  margin: 0 auto 4px;
  background: #3a82f8;
}

.tip-bubble {
  width: 18px;
  height: 18px;
  line-height: 18px;
  position: absolute;
  top: -9px;
  right: -3px;
  text-align: center;
  background: #fff;
  border-radius: 50%;
  border: 1px solid red;
  /* color: red; */
  border-color: rgb(58, 130, 248);
  color: rgb(58, 130, 248);
}
