<view class="container section">
  <swiper class="home-banner" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="true">
    <block wx:for="{{bannerList}}" wx:key="banner">
      <swiper-item>
        <image mode="scaleToFill" wx:key="{{item.src}}" src="{{item.src}}"></image>
      </swiper-item>
    </block>
  </swiper>
</view>
<view class="section service-wrap">
  <view class="service-item">
    <image class="service-img" src="../../images/1.jpg" binderror="imageError"></image>
    <view class="service-text text-content">
      <view>家电维修</view>
      <view>预约>></view>
    </view>
  </view>
  <view class="service-item">
    <image class="service-img" src="../../images/2.jpg" binderror="imageError"></image>
    <view class="service-text text-content">
      <view>家电清洗</view>
      <view>预约>></view>
    </view>
  </view>
  <view class="service-item">
    <image class="service-img" src="../../images/3.jpg" binderror="imageError"></image>
    <view class="service-text text-content">
      <view>家电拆装</view>
      <view>预约>></view>
    </view>
  </view>
</view>
<view class="section">
  <image src="{{myImage}}" binderror="imageError"></image>
</view>
<view class="section" style="">
  <map style="width: 100%; height: 300px;" latitude="30.1841049080" longitude="120.2642333508"></map>
</view>
<view class="section">
  <view class="title-wrap">
    <text>您有啥要修,发布在这里</text>
  </view>
  <form bindsubmit="formSubmit">
    <view class="form-wrap">
      <view>
        <view class="form-label">
          <text class="must-fill">*</text> 姓名：</view>
        <input name="fullName" type="text" class="form-input" placeholder="请输入姓名" />
      </view>
      <view>
        <view class="form-label">
          <text class="must-fill">*</text> 电话：</view>
        <input name="telphone" type="number" class="form-input" placeholder="请输入你的电话" />
      </view>
      <view>
        <view class="form-label">
          <text class="must-fill">*</text> 上门时间：</view>
        <picker mode="date" name="serviceTime">
          <view class="form-input date-input">请输入日期</view>
        </picker>
      </view>
      <view>
        <view class="form-label">
          <text class="must-fill">*</text> 请选择你要的服务：</view>
        <radio-group class="radio-group" name="serviceType">
          <radio class="radio" wx:for-items="{{serviceTypeList}}" value="{{item.name}}" checked="{{item.checked}}" wx:key="name">
            <text>{{item.value}}</text>
          </radio>
        </radio-group>
      </view>
      <view>
        <view class="form-label"> 图片上传：</view>
        <view name="image" bindtap="doUpload" class="form-input date-input">可上传损坏部分图片</view>
      </view>
      <view>
        <view class="form-label"> 备注：</view>
        <textarea class="form-textarea" name="descr" placeholder="可备注家电型号及所需特殊的工具" />
      </view>
      <view class="form-label">
        <button formType="submit" type="primary">马上提交</button>
      </view>
    </view>
  </form>
</view>