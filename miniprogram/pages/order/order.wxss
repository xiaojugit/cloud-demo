.order-tab-nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.order-tab-item {
  flex: 1;
  width: 0%;
  height: 44px;
  margin: 0 10px;
  line-height: 44px;
  text-align: center;
}

.order-tab-item.active {
  border-bottom: 2px solid rgb(58, 130, 248);
  color: rgb(58, 130, 248);
}

.order-list {
  padding: 0 15px;
  font-size: 14px;
}

.order-list .order-item-header {
  height: 44px;
  line-height: 44px;
  border-bottom: 1px solid #eee;
}

.order-list .order-status {
  float: right;
  color: rgb(58, 130, 248);
}

.order-item-content {
  padding: 15px 15px 15px 0;
  overflow: hidden;
  line-height: 20px;
  font-size: 12px;
  color: #888;
}
.order-item-row {
  display: flex;
  justify-content: center;
}
.order-item-row .order-info {
  flex: 1;
  width: 0%;
  color: #333;
}

.order-list .order-item-footer {
  height: 49px;
  border-top: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.order-list .order-operate-btn {
  padding: 5px;
  background-color: #fff;
  border: 1px solid #999;
  border-radius: 2px;
  color: #999;
}
