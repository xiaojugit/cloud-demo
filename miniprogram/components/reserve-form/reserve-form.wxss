/* components/reserve-form/reserve-form.wxss */

.form-wrap {
  padding: 10px 15px;
  box-sizing: border-box;
  background: #fff;
}

.must-fill {
  color: #f00;
}

.form-label {
  padding: 10px 0;
  color: #353535;
  font-size: 14px;
}

.form-input, .form-textarea {
  width: 100%;
  height: 48px;
  padding: 10px 15px;
  background: #f4f4f4;
  border-radius: 2px;
  box-sizing: border-box;
  font-size: 14px;
  color: #353535;
}

.form-textarea {
  height: 120px;
}

.radio {
  margin-right: 15px;
  color: #666;
  font-size: 12px;
}

.date-input {
  color: #666;
  line-height: 28px;
}
